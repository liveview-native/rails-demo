<ScrollView article="<%= @article.id %>" style='
  navigationBarTitleDisplayMode(.inline);
  navigationTransition(.zoom(sourceID: attr("article"), in: :animationNamespace))
  '>
  <VStack alighment="leading" spacing="15">
    <Text style="
      font(.title);
      bold();
      foregroundStyle(.white);
      padding();
      shadow(radius: 5);
      frame(maxWidth: .infinity, minHeight: 300, alignment: .bottomLeading);
      background(content: :background);
      clipped();
      ">
      <%= @article.title %>
      <AsyncImage url="<%= @article.image_url %>" template="background" style="
        overlay(Color.black.opacity(0.3));
        ">
        <Group template="phase.empty">
    
          <ZStack>
            <Color name="system-gray" style="opacity(0.2)"></Color>
            <ProgressView></ProgressView>
          </ZStack>
        
        </Group>
        <AsyncImage image template="phase.success" class="" style="
          resizable();
          scaledToFill();
          "></AsyncImage>
        <Group template="phase.failure">
          <Color name="system-gray"></Color>
        </Group>
      </AsyncImage>
    </Text>
    <Text style="
      font(.body);
      padding()
      "><%= @article.body %></Text>
  </VStack>
</ScrollView>

