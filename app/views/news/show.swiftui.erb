<ScrollView article="<%= @article.id %>" style='
  navigationBarTitleDisplayMode(.inline);
  navigationTransition(.zoom(sourceID: attr("article"), in: :animationNamespace))
  '>
  <VStack alighment="leading" spacing="15">
    <Text style="
      font(.title);
      bold();
      foregroundStyle(.white);
      padding();
      shadow(radius: 5);
      frame(maxWidth: .infinity, minHeight: 300, alignment: .bottomLeading);
      background(content: :background);
      clipped();
      ">
      <%= @article.title %>
      <.image url="<%= @article.image_url %>" template="background" style='
        overlay(Color.black.opacity(0.3));
        '>
        <:success style="
          resizable();
          scaledToFill();
          "/>
        <:failure>
          <Color name="system-gray"/>
        </:failure>
        <:empty>
          <ZStack>
            <Color name="system-gray" style="opacity(0.2)"/>
            <ProgressView/>
          </ZStack>
        </:empty>
      </.image>
    </Text>
    <Text style="
      font(.body);
      padding()
      "><%= @article.body %></Text>
  </VStack>
</ScrollView>

